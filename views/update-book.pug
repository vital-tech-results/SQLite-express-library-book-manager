extends layout.pug

block content
        h2 Update Book Form

        form(method='PUT' action="/books/" + id + "?_method=PUT")
            p
                label(for="title") Title
                input#title(name="title" type="text" value=title)
            p
                label(for="author") Author
                input#author(name="author" type="text" value=author)
            p
                label(for="genre") Genre
                input#genre(name="genre" type="text" value=genre)
            p
                label(for="year") Year
                input#year(name="year" type="text" value=year)
            p
                input(type="submit" value="Update Book")
            form(method="post" action="/books/8/delete" onsubmit="return confirm('Do you really want to delete this book?');")
            p
                a.button(href="all_books.html") Cancel
            p
                input(type="submit" value="Delete Book")